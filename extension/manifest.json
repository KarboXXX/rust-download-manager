{
    "manifest_version": 2,
    "name": "KarboX Download Monitoring",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "activeTab",
        "cookies",
        "downloads",
        "downloads.open",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon.png"
    }
}
